<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zqy.sharecommunity.dao.DiscussPostMapper" >
  <sql id="selectFields">
        id, user_id, title, content, type, status, create_time, comment_count, score
    </sql>

  <sql id="insertFields">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>


  <select id="selectDiscussPosts" resultType="com.zqy.sharecommunity.entity.DiscussPost" >
    select 
    <include refid="selectFields" />
    from discuss_post
    where status != 2
    <if test="userId!=0">
      and user_id = #{userId}
    </if>
    order by type desc,create_time desc
  </select>

  <select id="selectDiscussPostsBySelective" resultType="com.zqy.sharecommunity.entity.DiscussPost" >
    select
    <include refid="selectFields" />
    from discuss_post
    where status != 2
      <if test="title != null">
          and title like "%"#{title}"%"
      </if>
    order by type desc,create_time desc
  </select>

    <update id="updatePostStatus">
        update discuss_post set status = #{status} where id = #{id}
    </update>



  <select id="selectAll" resultType="com.zqy.sharecommunity.entity.DiscussPost" >
    select
    <include refid="selectFields" />
    from discuss_post
  </select>

  <select id="selectDiscussPostRows" resultType="java.lang.Integer">
    select
    count(id)
    from discuss_post
    where status != 2
    <if test="userId!=0">
      and user_id = #{userId}
    </if>
  </select>


  <select id="selectDiscussPostById" resultType="DiscussPost">
    select <include refid="selectFields"></include>
    from discuss_post
    where id = #{id}
  </select>

  <!--修改评论数量-->
  <update id="updateCommentCount">
        update discuss_post set comment_count = #{commentCount} where id = #{id}
    </update>


  <insert id="insertDiscussPost" parameterType="DiscussPost" keyProperty="id">
    insert into discuss_post(<include refid="insertFields"></include>)
    values(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score})
  </insert>
</mapper>